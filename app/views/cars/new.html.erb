<h1>Ajouter une nouvelle voiture</h1>

<%= form_with(model: @car, local: true) do |f| %>
  <div class="form-group">
    <%= f.label :name, "Nom du modèle" %>
    <%= f.text_field :name, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= f.label :price, "Prix" %>
    <%= f.number_field :price, class: "form-control", step: "0.01" %>
  </div>

  <div class="form-group">
    <%= f.label :detail, "Détails" %>
    <%= f.text_area :detail, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= f.label :img_url, "URL de l'image" %>
    <%= f.text_field :img_url, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= f.label :brand, "Marque" %>
    <%= f.text_field :brand, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= f.label :car_type, "Type de véhicule" %>
    <%= f.text_field :car_type, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= f.label :motorization, "Motorisation" %>
    <%= f.text_field :motorization, class: "form-control" %>
  </div>

  <%= f.submit "Créer la voiture", class: "btn btn-primary" %>
<% end %>
